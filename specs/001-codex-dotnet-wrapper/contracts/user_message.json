{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserMessageEvent",
  "description": "User input event containing the prompt or message submitted to Codex",
  "type": "object",
  "required": ["timestamp", "type", "payload"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "const": "user_message"
    },
    "payload": {
      "type": "object",
      "required": ["message"],
      "properties": {
        "message": {
          "type": "string",
          "description": "User's prompt or message text"
        }
      }
    }
  },
  "examples": [
    {
      "timestamp": "2025-11-20T20:02:28.456Z",
      "type": "user_message",
      "payload": {
        "message": "Generate integration tests for the Countries controller"
      }
    },
    {
      "timestamp": "2025-11-20T20:15:10.234Z",
      "type": "user_message",
      "payload": {
        "message": "Add error handling for null values"
      }
    }
  ]
}
